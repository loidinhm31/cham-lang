{
  "name": "cham-lang-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:tauri": "turbo run dev --filter=@cham-lang/tauri",
    "dev:web": "turbo run dev --filter=@cham-lang/web",
    "build": "turbo run build",
    "build:tauri": "turbo run build --filter=@cham-lang/tauri",
    "build:web": "turbo run build --filter=@cham-lang/web",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.5.4",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@9.1.0"
}
